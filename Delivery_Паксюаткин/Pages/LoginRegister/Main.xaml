<Page x:Class="Delivery_Паксюаткин.Pages.LoginRegister.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Delivery_Паксюаткин.Pages.LoginRegister"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Grid Background="#FF83FF49" Margin="0" Height="271" VerticalAlignment="Center" HorizontalAlignment="Center">
