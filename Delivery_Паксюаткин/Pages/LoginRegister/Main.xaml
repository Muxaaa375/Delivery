            <Label Content="Авторизация" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontSize="36"  Foreground="Black" Margin="0,43,0,179"/>

            <Label Content="Ⓒ Паксюаткин М.А." HorizontalAlignment="Center" Width="104" FontFamily="Microsoft JhengHei UI Light" FontSize="10" Margin="0,277,0,-31" FontWeight="Bold" />
            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="43" Height="7" Margin="0,104,0,0" >
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF83FF49" Offset="0.272"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="43" Height="4" Margin="0,111,0,0" Background="White" />
            <Label Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Top" Width="43" Height="23" Margin="0,97,0,0" />

            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="48" Height="7" Margin="0,146,0,0" >
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF83FF49" Offset="0.272"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="44" Height="4" Margin="0,153,0,0" Background="White" />
            <Label Content="Пароль" HorizontalAlignment="Center" Width="52" Margin="0,139,0,106"/>
            <Button Click="OpenRegister" Content="Зарегистрироваться" Height="18"  HorizontalAlignment="Center" Width="116" Background="White" BorderBrush="DeepSkyBlue" Foreground="Black" VerticalAlignment="Top" Margin="0,250,0,0" FontSize="10" />
        </Grid>
        <Label Content="Курьер: c - c" Margin="10,456,0,0" VerticalAlignment="Top" Width="175" FontSize="10" HorizontalAlignment="Left"/>
        <Label Content="Пользователь: u - u" Margin="10,479,0,0" VerticalAlignment="Top" Width="175" FontSize="10" HorizontalAlignment="Left"/>
    </Grid>
</Page>
